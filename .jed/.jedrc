%% makefile
autoload("make_mode", "make");
private define set_modes_hook(base, ext)
{
	if ( (base == "Makefile") || (base == "GNUmakefile") || (ext == ".mak") ) {
		make_mode ();
		return 1;
		}
	else if ( (base == "README")
			  || (base == "INSTALL")
			  || (base == "CHANGES")
			  || (base == "CHANGELOG")
			  || (base == "ChangeLog")
			  || (base == "NEWS")
			  || (base == "TODO")
			  || (base == "NOTES")
			  || (ext == ".hlp")
			  || (ext == ".log")
			  || (ext == ".txt") ) {
		text_mode();
		return 1;
		}
	return 0;
}
list_append (Mode_Hook_Pointer_List, &set_modes_hook);

